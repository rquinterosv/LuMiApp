<%= form_with(model: route, remote: true) do |form| %>
  <% if route.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(route.errors.count, "error") %> prohibited this route from being saved:</h2>

      <ul>
        <% route.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="columns">

    <div class="column ">
      <h1 class="title">Estos campos son obligatorios</h1>
      <div>
        <%= form.label :location, style: "display: block" %>
        <%= form.text_field :location %>
      </div>

      <div>
        <%= form.label :zone, style: "display: block" %>
        <%= form.text_field :zone %>
      </div>

      <div>
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name %>
      </div>

      <div>
        <%= form.label :grade, style: "display: block" %>
<%= select_tag :grades, options_for_select(Route.grades) %>

      </div>

      <div>
        <%= form.label :date, style: "display: block" %>
        <%= form.date_field :date %>
      </div>

    </div>

    <div class="column">
      <h1 class="title">Estos campos NO son obligatorios</h1>
      <div>
        <%= form.label :category, style: "display: block" %>
        <%= form.number_field :category %>
      </div>

      <div>
        <%= form.label :lead_climbing, style: "display: block" %>
        <%= form.text_field :lead_climbing %>
      </div>

      <div>
        <%= form.label :observation, style: "display: block" %>
        <%= form.text_field :observation %>
      </div>

      <div>
        <%= form.label :country_id, style: "display: block" %>
        <%= form.select :country_id, Country.pluck(:name, :id), class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      </div>

      <div>
        <%= form.label :region_id, style: "display: block" %>
        <%= form.select :region_id, Region.pluck(:name, :id), class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      </div>
    </div>


  </div>

<br>
  <div>
    <%= form.submit class:"button is-dark" %>
  </div>
<% end %>
